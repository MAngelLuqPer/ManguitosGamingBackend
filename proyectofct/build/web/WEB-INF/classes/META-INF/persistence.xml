<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
          
    
    <persistence-unit name="proyectofctPU" transaction-type="RESOURCE_LOCAL">
                    
        
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
                    
        
        <class>model.entities.Comentario</class>
                
        <class>model.entities.Comunidad</class>
                
        <class>model.entities.Publicacion</class>
                
        <class>model.entities.Expulsados</class>
                
        <class>model.entities.Usuario</class>
                
        <class>model.entities.Reportes</class>
                
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
                    
        
        <properties>
                              
            
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/proyectofct?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
                              
            
            <property name="javax.persistence.jdbc.user" value="proyectofct"/>
                              
            
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
                              
            
            <property name="javax.persistence.jdbc.password" value="proyectofct"/>
                              
            
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
                            
        
        </properties>
                  
    
    </persistence-unit>
        

</persistence>
